<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFrameworks>net10.0;net9.0;net8.0</TargetFrameworks>
        <PackageId>Genocs.Secrets.HashicorpKeyVault</PackageId>
        <RootNamespace>Genocs.Secrets.HashicorpKeyVault</RootNamespace>
        <AssemblyName>Genocs.Secrets.HashicorpKeyVault</AssemblyName>
        <Title>Genocs HashiCorp Vault secrets integration</Title>
        <Description>HashiCorp Vault integration for retrieving and managing application secrets.</Description>
        <PackageTags>genocs secrets vault hashicorp-vault configuration security</PackageTags>
    </PropertyGroup>

    <ItemGroup Condition="'$(Configuration)' == 'Debug'">
        <ProjectReference Include="..\Genocs.Core\Genocs.Core.csproj" />
    </ItemGroup>

    <ItemGroup Condition="'$(Configuration)' == 'Release'">
        <PackageReference Include="Genocs.Core" Version="9.0.0-beta001" />
    </ItemGroup>

    <ItemGroup>
        <PackageReference Include="Newtonsoft.Json" Version="13.0.4" />
        <PackageReference Include="VaultSharp" Version="1.17.5.1" />
    </ItemGroup>
</Project>
