<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
        <TargetFrameworks>net10.0;net9.0;net8.0</TargetFrameworks>
		<PackageId>Genocs.Tracing.Jaeger.RabbitMQ</PackageId>
        <RootNamespace>Genocs.Tracing.Jaeger.RabbitMQ</RootNamespace>
        <AssemblyName>Genocs.Tracing.Jaeger.RabbitMQ</AssemblyName>   		
		<Title>Genocs Jaeger tracing for RabbitMQ</Title>
		<Description>Jaeger tracing integration for RabbitMQ-based messaging pipelines.</Description>
		<PackageTags>genocs tracing jaeger rabbitmq opentelemetry messaging</PackageTags>
	</PropertyGroup>

	<ItemGroup Condition="'$(Configuration)' == 'Debug'">
		<ProjectReference Include="..\Genocs.MessageBrokers.RabbitMQ\Genocs.MessageBrokers.RabbitMQ.csproj" />
		<ProjectReference Include="..\Genocs.Tracing\Genocs.Tracing.csproj" />
	</ItemGroup>

	<ItemGroup Condition="'$(Configuration)' == 'Release'">
		<PackageReference Include="Genocs.MessageBrokers.RabbitMQ" Version="8.1.*" />
		<PackageReference Include="Genocs.Tracing" Version="8.1.*" />
	</ItemGroup>

</Project>
