<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFrameworks>net10.0;net9.0;net8.0</TargetFrameworks>
        <PackageId>Genocs.Persistence.Redis</PackageId>
        <RootNamespace>Genocs.Persistence.Redis</RootNamespace>
        <AssemblyName>Genocs.Persistence.Redis</AssemblyName>
        <Title>Genocs Redis persistence integration</Title>
        <Description>Redis-backed persistence helpers and repository integration.</Description>
        <PackageTags>genocs persistence redis repository caching</PackageTags>
    </PropertyGroup>

    <ItemGroup Condition="'$(Configuration)' == 'Debug'">
        <ProjectReference Include="..\Genocs.Core\Genocs.Core.csproj" />
    </ItemGroup>

    <ItemGroup Condition="'$(Configuration)' == 'Release'">
        <PackageReference Include="Genocs.Core" Version="9.0.0-beta001" />
    </ItemGroup>

    <ItemGroup>
        <PackageReference Include="Microsoft.Extensions.Caching.StackExchangeRedis" Version="10.0.2" />
    </ItemGroup>

</Project>
