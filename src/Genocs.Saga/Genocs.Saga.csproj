<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFrameworks>net10.0;net9.0;net8.0</TargetFrameworks>
        <PackageId>Genocs.Saga</PackageId>
        <RootNamespace>Genocs.Saga</RootNamespace>
        <AssemblyName>Genocs.Saga</AssemblyName>
        <Title>Genocs Saga</Title>
        <Description>Implementation of saga pattern for .NET Core</Description>
        <PackageTags>saga saga-pattern microservice microservices solid solid-principles</PackageTags>
    </PropertyGroup>

    <!-- InternalsVisibleTo for unit tests -->
    <ItemGroup>
        <AssemblyAttribute Include="System.Runtime.CompilerServices.InternalsVisibleToAttribute">
            <_Parameter1>Genocs.Saga.UnitTests</_Parameter1>
        </AssemblyAttribute>
    </ItemGroup>

    <ItemGroup>
        <PackageReference Include="Microsoft.Extensions.DependencyInjection" Version="10.0.3" />
        <PackageReference Include="Scrutor" Version="7.0.0" />
    </ItemGroup>
</Project>