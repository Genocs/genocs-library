<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFrameworks>net10.0;net9.0;net8.0</TargetFrameworks>
        <PackageId>Genocs.WebApi</PackageId>
        <RootNamespace>Genocs.WebApi</RootNamespace>
        <AssemblyName>Genocs.WebApi</AssemblyName>
        <Title>Genocs ASP.NET Core Web API</Title>
        <Description>ASP.NET Core Web API extensions and conventions for Genocs applications.</Description>
        <PackageTags>genocs webapi aspnetcore api middleware conventions</PackageTags>
    </PropertyGroup>

    <ItemGroup Condition="'$(Configuration)' == 'Debug'">
        <ProjectReference Include="..\Genocs.Core\Genocs.Core.csproj" />
    </ItemGroup>

    <ItemGroup Condition="'$(Configuration)' == 'Release'">
        <PackageReference Include="Genocs.Core" Version="9.0.0-beta001" />
    </ItemGroup>

    <ItemGroup>
        <PackageReference Include="Open.Serialization.Json.System" Version="3.0.0" />
        <PackageReference Include="Open.Serialization.Json.Utf8Json" Version="3.0.0" />
    </ItemGroup>

    <ItemGroup>
        <FrameworkReference Include="Microsoft.AspNetCore.App" />
    </ItemGroup>
</Project>
