<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFrameworks>net10.0;net9.0;net8.0</TargetFrameworks>
        <PackageId>Genocs.WebApi.CQRS</PackageId>
        <RootNamespace>Genocs.WebApi.CQRS</RootNamespace>
        <AssemblyName>Genocs.WebApi.CQRS</AssemblyName>
        <Title>Genocs Web API CQRS support</Title>
        <Description>CQRS extensions for Genocs ASP.NET Core Web APIs.</Description>
        <PackageTags>genocs webapi cqrs aspnetcore commands queries</PackageTags>
    </PropertyGroup>

    <ItemGroup Condition="'$(Configuration)' == 'Debug'">
        <ProjectReference Include="..\Genocs.WebApi\Genocs.WebApi.csproj" />
    </ItemGroup>

    <ItemGroup Condition="'$(Configuration)' == 'Release'">
        <PackageReference Include="Genocs.WebApi" Version="9.0.0-beta001" />
    </ItemGroup>

</Project>
