<Project Sdk="Microsoft.NET.Sdk.Worker">

    <PropertyGroup>
        <TargetFramework>net9.0</TargetFramework>
        <PackageId>Genocs.Library.Demo.Worker</PackageId>
        <RootNamespace>Genocs.Library.Demo.Worker</RootNamespace>
        <AssemblyName>Genocs.Library.Demo.Worker</AssemblyName>
        <IsPackable>false</IsPackable>
        <UserSecretsId>Genocs</UserSecretsId>
        <!-- Disable web.config transformation for Docker builds -->
        <TransformWebConfigEnabled>false</TransformWebConfigEnabled>
        <WebConfigTransformEnabled>false</WebConfigTransformEnabled>
    </PropertyGroup>

    <ItemGroup Condition="'$(Configuration)' == 'Debug'">
        <ProjectReference Include="..\..\Genocs.Logging\Genocs.Logging.csproj" />
        <ProjectReference Include="..\..\Genocs.Tracing\Genocs.Tracing.csproj" />
    </ItemGroup>

    <ItemGroup Condition="'$(Configuration)' == 'Release'">
        <PackageReference Include="Genocs.Logging" Version="7.5.*" />
        <PackageReference Include="Genocs.Tracing" Version="7.5.*" />
    </ItemGroup>

    <ItemGroup>
        <PackageReference Include="MassTransit.Extensions.DependencyInjection" Version="7.3.1" />
        <PackageReference Include="MassTransit.RabbitMQ" Version="8.5.5" />
        <PackageReference Include="Microsoft.VisualStudio.Azure.Containers.Tools.Targets" Version="1.22.1" />
        <PackageReference Include="Serilog.Sinks.ApplicationInsights" Version="4.1.0" />
    </ItemGroup>

    <ItemGroup>
        <ProjectReference Include="..\Contracts\Contracts.csproj" />
        <ProjectReference Include="..\Domain\Domain.csproj" />
    </ItemGroup>

</Project>
