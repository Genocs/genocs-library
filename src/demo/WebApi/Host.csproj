<Project Sdk="Microsoft.NET.Sdk.Web">

    <PropertyGroup>
        <TargetFramework>net9.0</TargetFramework>
        <PackageId>Genocs.Library.Demo.WebApi</PackageId>
        <RootNamespace>Genocs.Library.Demo.WebApi</RootNamespace>
        <AssemblyName>Genocs.Library.Demo.WebApi</AssemblyName>
        <Nullable>enable</Nullable>
        <ImplicitUsings>enable</ImplicitUsings>
        <UserSecretsId>Genocs</UserSecretsId>
        <IsPackable>false</IsPackable>
        <!-- Disable web.config transformation for Docker builds -->
        <TransformWebConfigEnabled>false</TransformWebConfigEnabled>
        <WebConfigTransformEnabled>false</WebConfigTransformEnabled>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="MassTransit.RabbitMQ" Version="8.4.0" />
    </ItemGroup>

    <ItemGroup Condition="'$(Configuration)' == 'Debug'">
        <ProjectReference Include="..\..\Genocs.Auth\Genocs.Auth.csproj" />
        <ProjectReference Include="..\..\Genocs.Logging\Genocs.Logging.csproj" />
        <ProjectReference Include="..\..\Genocs.Tracing\Genocs.Tracing.csproj" />
        <ProjectReference Include="..\..\Genocs.HTTP\Genocs.HTTP.csproj" />
        <ProjectReference Include="..\..\Genocs.Security\Genocs.Security.csproj" />
        <ProjectReference Include="..\..\Genocs.WebApi.Swagger\Genocs.WebApi.Swagger.csproj" />
        <ProjectReference Include="..\..\Genocs.WebApi.Security\Genocs.WebApi.Security.csproj" />
        <ProjectReference Include="..\..\Genocs.Secrets.AzureKeyVault\Genocs.Secrets.AzureKeyVault.csproj" />
        <ProjectReference Include="..\..\Genocs.Metrics\Genocs.Metrics.csproj" />
    </ItemGroup>

    <ItemGroup Condition="'$(Configuration)' == 'Release'">
        <PackageReference Include="Genocs.Auth" Version="7.5.*" />
        <PackageReference Include="Genocs.Logging" Version="7.5.*" />
        <PackageReference Include="Genocs.Tracing" Version="7.5.*" />
        <PackageReference Include="Genocs.HTTP" Version="7.5.*" />
        <PackageReference Include="Genocs.Security" Version="7.5.*" />
        <PackageReference Include="Genocs.WebApi.Swagger" Version="7.5.*" />
        <PackageReference Include="Genocs.WebApi.Security" Version="7.5.*" />
        <PackageReference Include="Genocs.Secrets.AzureKeyVault" Version="7.5.*" />
        <PackageReference Include="Genocs.Metrics" Version="7.5.*" />
    </ItemGroup>

    <ItemGroup>
        <ProjectReference Include="..\Contracts\Contracts.csproj" />
        <ProjectReference Include="..\Domain\Domain.csproj" />
    </ItemGroup>
</Project>
