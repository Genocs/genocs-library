<Project Sdk="Microsoft.NET.Sdk.Web">

    <PropertyGroup>
        <TargetFramework>net10.0</TargetFramework>
        <RootNamespace>Genocs.Library.Demo.WebApi</RootNamespace>
        <AssemblyName>Genocs.Library.Demo.WebApi</AssemblyName>
        <IsPackable>false</IsPackable>
        <UserSecretsId>Genocs</UserSecretsId>
        <DockerDefaultTargetOS>Linux</DockerDefaultTargetOS>
        <DockerfileContext>..\..</DockerfileContext>
        <!-- Disable web.config transformation for Docker builds -->
        <TransformWebConfigEnabled>false</TransformWebConfigEnabled>
        <WebConfigTransformEnabled>false</WebConfigTransformEnabled>
    </PropertyGroup>

    <ItemGroup Condition="'$(Configuration)' == 'Debug'">
        <ProjectReference Include="..\..\Genocs.Auth\Genocs.Auth.csproj" />
        <ProjectReference Include="..\..\Genocs.Logging\Genocs.Logging.csproj" />
        <ProjectReference Include="..\..\Genocs.Telemetry\Genocs.Telemetry.csproj" />
        <ProjectReference Include="..\..\Genocs.Saga\Genocs.Saga.csproj" />
        <ProjectReference Include="..\..\Genocs.WebApi.OpenApi\Genocs.WebApi.OpenApi.csproj" />
    </ItemGroup>

    <ItemGroup Condition="'$(Configuration)' == 'Release'">
        <PackageReference Include="Genocs.Auth" Version="9.0.0-beta001" />
        <PackageReference Include="Genocs.Logging" Version="9.0.0-beta001" />
        <PackageReference Include="Genocs.Telemetry" Version="9.0.0-beta001" />
        <PackageReference Include="Genocs.Saga" Version="9.0.*" />
        <PackageReference Include="Genocs.WebApi.OpenApi" Version="9.0.0-beta001" />
    </ItemGroup>

    <ItemGroup>
        <ProjectReference Include="..\Infrastructure\Infrastructure.csproj" />
    </ItemGroup>

    <ItemGroup>
      <Folder Include="logs\" />
    </ItemGroup>

</Project>
