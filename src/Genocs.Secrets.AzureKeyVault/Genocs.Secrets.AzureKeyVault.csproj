<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFrameworks>net10.0;net9.0;net8.0</TargetFrameworks>
        <PackageId>Genocs.Secrets.AzureKeyVault</PackageId>
        <RootNamespace>Genocs.Secrets.AzureKeyVault</RootNamespace>
        <AssemblyName>Genocs.Secrets.AzureKeyVault</AssemblyName>
        <Title>Genocs Azure Key Vault secrets integration</Title>
        <Description>Azure Key Vault integration for retrieving and managing application secrets.</Description>
        <PackageTags>genocs secrets azure-key-vault keyvault configuration security</PackageTags>
    </PropertyGroup>

    <ItemGroup Condition="'$(Configuration)' == 'Debug'">
        <ProjectReference Include="..\Genocs.Core\Genocs.Core.csproj" />
    </ItemGroup>

    <ItemGroup Condition="'$(Configuration)' == 'Release'">
        <PackageReference Include="Genocs.Core" Version="8.1.*" />
    </ItemGroup>

    <ItemGroup>
        <PackageReference Include="Azure.Extensions.AspNetCore.Configuration.Secrets" Version="1.4.0" />
        <PackageReference Include="Azure.Identity" Version="1.17.1" />
    </ItemGroup>

</Project>
