{
  "consul": {
    "enabled": false,
    "url": "consul",
    "service": "apigateway",
    "address": "apigateway",
    "port": "80",
    "pingEnabled": true
  },
  "fabio": {
    "enabled": true,
    "url": "http://fabio:9999",
    "service": "apigateway",
    "requestRetries": 3
  },
  "httpClient": {
    "type": "",
    "retries": 3,
    "services": {
    },
    "requestMasking": {
      "enabled": false,
      "maskTemplate": "*****"
    },
    "correlationIdHeader": "x-correlation-id"
  },
  "logger": {
    "level": "debug",
    "excludePaths": [
      "/",
      "/healthz",
      "/alive",
      "/metrics"
    ],
    "excludeProperties": [
      "api_key",
      "access_key",
      "ApiKey",
      "ApiSecret",
      "ClientId",
      "ClientSecret",
      "ConnectionString",
      "Password",
      "Email",
      "Login",
      "Secret",
      "Token"
    ],
    "tags": {}
  },
  "telemetry": {
    "enabled": true,
    "exporter": {
      "enabled": true,
      "otlpEndpoint": "http://localhost:4317",
      "protocol": "Grpc",
      "processorType": "Batch",
      "maxQueueSize": 2048,
      "scheduledDelayMilliseconds": 5000,
      "exporterTimeoutMilliseconds": 30000,
      "maxExportBatchSize": 512
    },
    "console": {
      "enabled": true,
      "enableTracing": true,
      "enableMetrics": false,
      "enableLogging": true
    },
    "azure": {
      "enabled": false,
      "enableTracing": false,
      "enableMetrics": false,
      "enableLogging": false,
      "connectionString": "InstrumentationKey=<<your_istrumentation_key>>;IngestionEndpoint=https://<<your_region>>.in.applicationinsights.azure.com/;LiveEndpoint=https://<<your_region>>.livediagnostics.monitor.azure.com/;ApplicationId=<<your_application_id>>"
    }
  },
  "jwt": {
    "enabled": true,
    "allowAnonymousEndpoints": [],
    "_certificate": {
      "location": "certs/localhost.pfx",
      "password": "test",
      "rawData": ""
    },
    "expiryMinutes": 60,
    "issuer": "genocs-identities-service",
    "issuerSigningKey": "THIS IS USED TO SIGN AND VERIFY JWT TOKENS, REPLACE IT WITH YOUR OWN SECRET, IT CAN BE ANY STRING",
    "validIssuer": "genocs-identities-service",
    "validateAudience": false,
    "validateIssuer": false,
    "validateLifetime": false,
    "requireExpirationTime": false,
    "requireSignedTokens": false,
    "validateIssuerSigningKey": false,
    "expiry": "01:00:00"
  },
  "mongodb": {
    "connectionString": "mongodb://localhost:27017",
    "database": "apigateway",
    "seed": false,
    "enableTracing": true
  },
  "rabbitmq": {
  },
  "redis": {
    "connectionString": "redis",
    "instance": "apigateway:",
    "database": 0
  },
  "reverseProxy": {
    "clusters": {
      "identities-cluster": {
        "destinations": {
          "destination1": {
            "address": "https://identities-service"
          }
        }
      },
      "products-cluster": {
        "destinations": {
          "destination1": {
            "address": "https://products-service"
          }
        }
      },
      "orders-cluster": {
        "destinations": {
          "destination1": {
            "address": "https://orders-service"
          }
        }
      },
      "notifications-cluster": {
        "destinations": {
          "destination1": {
            "address": "https://notifications-service"
          }
        }
      }
    }
  },
  "vault": {
    "enabled": false,
    "url": "http://localhost:8200",
    "authType": "token",
    "token": "secret",
    "username": "user",
    "password": "secret",
    "kv": {
      "enabled": false,
      "engineVersion": 2,
      "mountPoint": "kv",
      "path": "apigateway/settings"
    },
    "pki": {
      "enabled": false,
      "roleName": "apigateway",
      "commonName": "apigateway.demo.io"
    },
    "lease": {
      "mongo": {
        "type": "database",
        "roleName": "apigateway",
        "enabled": false,
        "autoRenewal": true,
        "templates": {
          "connectionString": "mongodb://{{username}}:{{password}}@localhost:27017"
        }
      }
    }
  }
}
