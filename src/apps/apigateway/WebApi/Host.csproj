<Project Sdk="Microsoft.NET.Sdk.Web">

    <PropertyGroup>
        <TargetFramework>net10.0</TargetFramework>
        <RootNamespace>Genocs.APIGateway.WebApi</RootNamespace>
        <AssemblyName>Genocs.APIGateway.WebApi</AssemblyName>
        <IsPackable>false</IsPackable>
        <UserSecretsId>_Genocs</UserSecretsId>
        <DockerDefaultTargetOS>Linux</DockerDefaultTargetOS>
        <DockerfileContext>..\..</DockerfileContext>
        <!-- Disable web.config transformation for Docker builds -->
        <TransformWebConfigEnabled>false</TransformWebConfigEnabled>
        <WebConfigTransformEnabled>false</WebConfigTransformEnabled>
    </PropertyGroup>

    <ItemGroup Condition="'$(Configuration)' == 'Debug'">
        <ProjectReference Include="..\..\..\Genocs.Auth\Genocs.Auth.csproj" />
        <ProjectReference Include="..\..\..\Genocs.Logging\Genocs.Logging.csproj" />
        <ProjectReference Include="..\..\..\Genocs.MessageBrokers\Genocs.MessageBrokers.csproj" />
        <ProjectReference Include="..\..\..\Genocs.MessageBrokers.RabbitMQ\Genocs.MessageBrokers.RabbitMQ.csproj" />
        <ProjectReference Include="..\..\..\Genocs.Metrics\Genocs.Metrics.csproj" />
        <ProjectReference Include="..\..\..\Genocs.Persistence.MongoDB\Genocs.Persistence.MongoDB.csproj" />
        <ProjectReference Include="..\..\..\Genocs.Secrets.Vault\Genocs.Secrets.Vault.csproj" />
        <ProjectReference Include="..\..\..\Genocs.Security\Genocs.Security.csproj" />
        <ProjectReference Include="..\..\..\Genocs.Telemetry\Genocs.Telemetry.csproj" />
        <ProjectReference Include="..\..\..\Genocs.WebApi\Genocs.WebApi.csproj" />
    </ItemGroup>

    <ItemGroup Condition="'$(Configuration)' == 'Release'">
        <PackageReference Include="Genocs.Auth" Version="8.1.*" />
        <PackageReference Include="Genocs.Logging" Version="8.1.*" />
        <PackageReference Include="Genocs.MessageBrokers" Version="8.1.*" />
        <PackageReference Include="Genocs.MessageBrokers.RabbitMQ" Version="8.1.*" />
        <PackageReference Include="Genocs.Metrics" Version="8.1.*" />
        <PackageReference Include="Genocs.Persistence.MongoDB" Version="8.1.*" />
        <PackageReference Include="Genocs.Secrets.Vault" Version="8.1.*" />
        <PackageReference Include="Genocs.Security" Version="8.1.*" />
        <PackageReference Include="Genocs.Telemetry" Version="8.1.*" />
        <PackageReference Include="Genocs.WebApi" Version="8.1.*" />
    </ItemGroup>

    <ItemGroup>
        <PackageReference Include="Yarp.ReverseProxy" Version="2.3.0" />
    </ItemGroup>

    <ItemGroup>
        <Content Include="certs\**" CopyToPublishDirectory="Always" />
    </ItemGroup>

    <ItemGroup>
        <None Update="README.md">
            <PackagePath>\</PackagePath>
            <Pack>True</Pack>
        </None>
    </ItemGroup>

    <ItemGroup>
        <Folder Include="logs\" />
    </ItemGroup>

</Project>
